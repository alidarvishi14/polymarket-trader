# Polymarket Authentication Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Your wallet address (0x...)
# This is your public Ethereum address on Polygon
POLYMARKET_ADDRESS=0x...your-wallet-address...

# Your private key (0x...)
# Export from MetaMask: Account Details â†’ Export Private Key
# KEEP THIS SECRET - anyone with this key can access your funds!
POLYMARKET_PRIVATE_KEY=0x...your-private-key...

# Your funder/proxy wallet address (optional but recommended)
# This is the address that holds your positions on Polymarket.
# You can find it by looking at your open orders - it's the "maker_address".
# If not set, it will be derived automatically from your orders.
POLYMARKET_FUNDER_ADDRESS=0x...your-funder-address...

# Signature type (optional, default is 0 for MetaMask/EOA)
# 0 = EOA (MetaMask, hardware wallets)
# 1 = Email/Magic wallet
# 2 = Browser wallet proxy
POLYMARKET_SIGNATURE_TYPE=0

# Chain ID (Polygon mainnet = 137, don't change unless testing)
POLYMARKET_CHAIN_ID=137
